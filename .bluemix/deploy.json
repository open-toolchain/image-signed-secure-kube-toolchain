{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "registry-region": {
            "description": {
                "$ref": "#/messages/deploy.registryRegionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": [
                    "api-key"
                ]
            }
        },
        "registry-namespace": {
            "description": {
                "$ref": "#/messages/deploy.registrynsDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8s-registry-namespace",
                "params": [
                    "registry-region"
                ],
                "validate": false
            }
        },
        "prod-region": {
            "description": {
                "$ref": "#/messages/region"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": [
                    "api-key"
                ]
            }
        },
        "prod-resource-group": {
            "description": {
                "$ref": "#/messages/deploy.rg"
            },
            "type": "string",
            "validator": {
                "v-type": "resource-group",
                "params": [
                    "api-key"
                ]
            }
        },
        "prod-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.cluster"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": [
                    "prod-resource-group",
                    "prod-region"
                ]
            }
        },
        "prod-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.clusterNs"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
        "build-region": {
            "description": {
                "$ref": "#/messages/buildregion"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": [
                    "api-key"
                ]
            }
        },
        "build-resource-group": {
            "description": {
                "$ref": "#/messages/deploy.buildrg"
            },
            "type": "string",
            "validator": {
                "v-type": "resource-group",
                "params": [
                    "api-key"
                ]
            }
        },
        "build-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.buildcluster"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": [
                    "build-resource-group",
                    "build-region"
                ]
            }
        },
        "build-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.clusterNs"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "vault_name": {
            "description": {
                "$ref": "#/messages/deploy.keyDetails"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "app-name",
        "api-key",
        "registry-region",
        "registry-namespace",
        "prod-region",
        "prod-resource-group",
        "prod-cluster-name",
        "prod-cluster-namespace",
        "build-region",
        "build-resource-group",
        "build-cluster-name",
        "build-cluster-namespace",
        "vault_name",
        "build_signer",
        "validation_signer"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "app-name"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": [
                "50%",
                "3%",
                "47%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.containerregRegion"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.containerregns"
                    }
                },
                {
                    "type": "select",
                    "title": {
                        "$ref": "#/messages/deploy.containerregRegion"
                    },
                    "key": "registry-region"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "readonly": false,
                    "title": {
                        "$ref": "#/messages/deploy.containerregns"
                    },
                    "key": "registry-namespace"
                }
            ]
        },
        {
            "type": "table",
            "columnCount": 7,
            "widths": [
                "24%",
                "2%",
                "24%",
                "3%",
                "23%",
                "1%",
                "23%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.rg"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.cluster"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusterNs"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "prod-resource-group",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "prod-cluster-name",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "text",
                    "key": "prod-cluster-namespace",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/buildregion"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.buildrg"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.buildcluster"
                    }
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.buildclusterNs"
                    }
                },
                {
                    "type": "select",
                    "key": "build-region"
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "build-resource-group",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "build-cluster-name",
                    "readonly": false
                },
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "text",
                    "key": "build-cluster-namespace",
                    "readonly": false
                }
            ]
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.vaultName"
            },
            "key": "vault_name"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.buildSigner"
            },
            "key": "build_signer"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.validationSigner"
            },
            "key": "validation_signer"
        },
        {
            "type": "table",
            "columnCount": 1,
            "widths": [
                "100%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusterDescription"
                    }
                }
            ]
        },
        {
            "type": "table",
            "columnCount": 1,
            "widths": [
                "100%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusternsDescription"
                    }
                }
            ]
        }
    ]
}